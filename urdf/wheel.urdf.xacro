<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="dude_wheel">	
  
  <xacro:macro name="dude_wheel" params="position *joint_pose">
  
    <link name="${position}_wheel">
      <visual>
        <geometry>
          <cylinder length="${wheel_leght}" radius="${wheel_radius}"/>
        </geometry>
        <material name="Blue" />
      </visual>
    </link>
  
    <joint name="${position}" type="continuous">      
      <parent link="base_link"/>
      <child link="${position}_wheel"/>
      <limit effort="100" velocity="100"/>
      <joint_properties damping="0.0" friction="0.0"/>
      <xacro:insert_block name="joint_pose"/>
      <axis xyz="0 0 1"/>
    </joint>

  
  </xacro:macro>

</robot>
